<!-- res/layout/dialog_add_goal.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@drawable/dialog_background"
    android:padding="16dp">

    <EditText
        android:id="@+id/goal_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="?attr/colorOnSurface"
        android:textColor="?attr/colorOnSurface"
        android:hint="Goal Title" />

    <EditText
        android:id="@+id/goal_target_amount_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="?attr/colorOnSurface"
        android:textColor="?attr/colorOnSurface"
        android:hint="Target Amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/goal_current_amount_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="?attr/colorOnSurface"
        android:textColor="?attr/colorOnSurface"
        android:hint="Current Amount"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/goal_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="?attr/colorOnSurface"
        android:textColor="?attr/colorOnSurface"
        android:hint="End Date"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground" />

    <Button
        android:id="@+id/add_goal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Goal" />

</LinearLayout>